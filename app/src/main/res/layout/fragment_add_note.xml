<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/Bright_Gray"
    tools:context=".view.AddNoteFragment">

    <EditText
        android:id="@+id/edit_text_namirnica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Namirnica"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_text_kolicina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kolicina"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/text_view_izaberi_redosled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Redosled :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>